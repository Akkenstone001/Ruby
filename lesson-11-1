print "(R)ock, (S)cissors, (P)aper?"
s = gets.strip.capitalize

if s == "R"
  user_choice = :rock
  elsif s == "S"
  user_choice = :scissors 
  elsif s == "P"
  user_choice = :paper
else
  puts "Can't understand you want, sorry..."
end 

arr = [:rock, :scissors, :paper]
computer_choice = arr[rand(0..2)]

puts "User choice: #{user_choice}"
puts "Computer choice: #{computer_choice}"

if computer_choice == :rock && user_choice == :rock
     puts "Draw"
elsif computer_choice == :scissors && user_choice == :scissors 
     puts "Draw"
elsif computer_choice == :paper && user_choice == :paper 
     puts "Draw"
end 


